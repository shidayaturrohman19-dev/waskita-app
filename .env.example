# Database Configuration
DATABASE_URL=postgresql://[username]:[password]@[host]:[port]/[database_name]
SQLALCHEMY_DATABASE_URI=postgresql://[username]:[password]@[host]:[port]/[database_name]

# Flask Configuration
SECRET_KEY=[your-secret-key]
FLASK_DEBUG=[True/False]
FLASK_ENV=[development/production]

# Upload Configuration
UPLOAD_FOLDER=[folder_path]
MAX_CONTENT_LENGTH=[bytes]

# Word2Vec Model Configuration
WORD2VEC_MODEL_PATH=[path_to_model]

# Email Configuration for OTP System
MAIL_SERVER=[smtp_server]
MAIL_PORT=[port]
MAIL_USE_TLS=[True/False]
MAIL_USE_SSL=[True/False]
MAIL_USERNAME=[email_address]
MAIL_PASSWORD=[app_password]
MAIL_DEFAULT_SENDER=[email_address]

# Admin Configuration
ADMIN_EMAIL=[admin_email]
ADMIN_EMAILS=[admin_email]

# OTP Configuration
OTP_LENGTH=[X]
OTP_EXPIRY_MINUTES=[X]
MAX_OTP_ATTEMPTS=[X]
LOCKOUT_DURATION_MINUTES=[X]

# Registration Configuration
REGISTRATION_ENABLED=[True/False]
AUTO_APPROVE_REGISTRATION=[True/False]

# Application URLs
BASE_URL=[http://host:port]

# Email Notification Settings
SEND_EMAIL_NOTIFICATIONS=[True/False]
EMAIL_RETRY_ATTEMPTS=[X]
EMAIL_RETRY_DELAY_SECONDS=[X]

# Cleanup Configuration
CLEANUP_EXPIRED_REQUESTS_HOURS=[X]
KEEP_COMPLETED_REQUESTS_DAYS=[X]